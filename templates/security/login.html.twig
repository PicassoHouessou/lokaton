{% block body %}
<main class="main-content">
   {% include "_preloader.html.twig" %}
    <div class="container">
        <div class="row">
            <div class="col-md-5 mx-auto my-4">
                <div class="card card-signup">
                    <div class="card-body">
                        <div class="text-center">
                            <a href="/">
                                <img src="assets/img/logo/lokaton_icon_r.png" width="50px" class="logo" />
                            </a>
                            <h3 class="card-title">{{"Connectez-vous"|trans}}</h3>
                            <p class="slogan">{{"Bon retour parmis nous !"|trans}}</p>
                        </div>
                        <form class="" method="post" novalidate="novalidate">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <div class="md-form">
                                <label for="email">{{"Numéro de téléphone"|trans}}</label>
                                <input type="email" name="email" id="email" class="form-control mb-3" placeholder="{{"Entrez votre numéro de téléphone"|trans}}"  value="{{ last_username }}" required autofocus>
                            </div>

                            <div class="md-form">
                                <label for="password">{{"Mot de passe"|trans}}</label>
                                <input type="password" name="password" id="password" class="form-control mb-3" placeholder="{{"Entrez votre mot de passe"|trans}}" autocomplete="current-password" required>
                            </div>
                            <small><a href="{{ absolute_url(path('app_forgot_password_request')) }}" class="text-dark">{{"Mot de passe oublié ?"|trans}}</a></small>

                            <div class="card-foter text-right mt-4">
                                <input type="submit" name="" value="Connexion">
                                <!-- <button type="button" class="btn" style="width: 100%;">Continuer</button> -->
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End preloader Start -->
</main>
{% endblock %}